$shadow-card = 0 2px 4px 0 rgba(0, 0, 0, 0.08), 0 4px 16px 0 rgba(0, 0, 0, 0.08), 0 8px 32px 0 rgba(0, 0, 0, 0.08)
$corner-radius-card = 5px
$card-highlight = inset 0 1px 0 0 rgba(255, 255, 255, 0.30)
$card-border = 0.5px solid $border-color


$mf-border-glow-color = #69b7ff
$mf-border-glow-shadow = 0 0 1px 2px $mf-border-glow-color
$mf-border-glow-transition = box-shadow 0.00s linear 0s

@-webkit-keyframes mf-ui-focus {
  0% {
    box-shadow: 0 0 0 #000000
  }
  to {
    box-shadow: $mf-border-glow-shadow
  }
}

$mf-ui-color-light-neutral = #e8e8e8 // Used for secondary button backgrounds
